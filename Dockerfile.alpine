FROM alpine:latest


WORKDIR /home/app/



RUN \
apk -qq update ; \
apk -qq upgrade
###

RUN \
apk add -U \
  build-essential \
  curl \
  htop \
  ifupdown \
  iproute2 \
  iptables \
  iputils-ping \
  nano \
  neofetch \
  net-tools \
  nginx \
  nmap \
  qrencode \
  rclone \
  wireguard-tools ; \
apk -qq update ; \
###

COPY /config ./config

RUN \
ip link add dev ${INTERFACE_NAME} type wireguard
ip address add dev ${INTERFACE_NAME} ${ADDRESS/SUB_NET}
ip link set up dev ${INTERFACE_NAME}
###

RUN rclone copy -vP . /etc/wireguard/


